  },
  {
    name: "Facebook",
    href: "#",
    icon: `<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>`,
  },
];
---

<footer class="footer">
  <div class="container-lg">
    <div class="footer-content">
      <div class="footer-brand">
        <h3 class="brand-name text-gradient">UpSessions</h3>
        <p class="brand-tagline">
          La plataforma que conecta la comunidad musical
        </p>
        <div class="social-links">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                class="social-link"
                aria-label={social.name}
              >
                <svg
                  class="icon"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  set:html={social.icon}
                />
              </a>
            ))
          }
        </div>
      </div>

      <div class="footer-links">
        <div class="link-column">
          <h4>Producto</h4>
          <ul>
            {
              footerLinks.product.map((link) => (
                <li>
                  <a href={link.href}>{link.label}</a>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="link-column">
          <h4>Compañía</h4>
          <ul>
            {
              footerLinks.company.map((link) => (
                <li>
                  <a href={link.href}>{link.label}</a>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="link-column">
          <h4>Legal</h4>
          <ul>
            {
              footerLinks.legal.map((link) => (
                <li>
                  <a href={link.href}>{link.label}</a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} UpSessions. Todos los derechos reservados.</p>
      <p>Hecho con ❤️ para la comunidad musical</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-darker);
    border-top: 1px solid rgba(248, 250, 252, 0.05);
    padding: var(--spacing-3xl) 0 var(--spacing-xl);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: var(--spacing-3xl);
    margin-bottom: var(--spacing-3xl);
    padding-bottom: var(--spacing-3xl);
    border-bottom: 1px solid rgba(248, 250, 252, 0.05);
  }

  .footer-brand {
    max-width: 400px;
  }

  .brand-name {
    font-size: 2rem;
    margin-bottom: var(--spacing-sm);
  }

  .brand-tagline {
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
    line-height: 1.6;
  }

  .social-links {
    display: flex;
    gap: var(--spacing-md);
  }

  .social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-card);
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    transition: all var(--transition-base);
    border: 1px solid rgba(139, 92, 246, 0.1);
  }

  .social-link:hover {
    background: var(--gradient-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
    border-color: transparent;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
  }

  .link-column h4 {
    color: var(--color-text-primary);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
  }

  .link-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .link-column li {
    margin-bottom: var(--spacing-sm);
  }

  .link-column a {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    transition: color var(--transition-base);
  }

  .link-column a:hover {
    color: var(--color-primary-light);
  }

  .footer-bottom {
    text-align: center;
  }

  .footer-bottom p {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: var(--spacing-xs);
  }

  @media (max-width: 968px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }
</style>
