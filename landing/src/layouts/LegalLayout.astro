---
import Layout from "./Layout.astro";

interface Props {
  title: string;
  description?: string;
  updated?: string;
}

const {
  title,
  description = "Informaci√≥n legal de UpSessions.",
  updated = "Pendiente de revisi√≥n",
} = Astro.props;
---

<Layout title={title} description={description}>
  <main class="legal-page">
    <section class="legal-hero">
      <div class="container">
        <a class="legal-back" href="/">Volver al inicio</a>
        <p class="legal-eyebrow">Legal</p>
        <h1>{title}</h1>
        <p class="legal-updated">√öltima actualizaci√≥n: {updated}</p>
        <div class="legal-intro">
          <slot name="intro" />
        </div>
      </div>
    </section>
    <section class="legal-content">
      <div class="container">
        <slot />
      </div>
    </section>
  </main>
</Layout>

<style>
  .legal-page {
    min-height: 100vh;
    background:
      radial-gradient(
        circle at top,
        rgba(139, 92, 246, 0.12),
        transparent 60%
      ),
      radial-gradient(
        circle at 80% 50%,
        rgba(59, 130, 246, 0.08),
        transparent 50%
      ),
      var(--gradient-hero);
    padding-bottom: var(--spacing-3xl);
  }

  .legal-hero {
    padding: var(--spacing-3xl) 0 var(--spacing-2xl);
    border-bottom: 1px solid rgba(248, 250, 252, 0.1);
    position: relative;
  }

  .legal-hero::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: var(--gradient-primary);
    border-radius: var(--radius-full);
    opacity: 0.6;
  }

  .legal-back {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
    border: 1px solid rgba(139, 92, 246, 0.25);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    background: rgba(30, 41, 59, 0.4);
    transition: all var(--transition-base);
  }

  .legal-back:hover {
    background: rgba(30, 41, 59, 0.6);
    border-color: rgba(139, 92, 246, 0.4);
    transform: translateX(-2px);
    color: var(--color-primary-light);
  }

  .legal-back::before {
    content: "‚Üê";
    font-size: 1.1em;
  }

  .legal-eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary-light);
    margin-bottom: var(--spacing-sm);
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgba(139, 92, 246, 0.15);
    border-radius: var(--radius-full);
    border: 1px solid rgba(139, 92, 246, 0.3);
  }

  .legal-updated {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: var(--spacing-sm) 0 var(--spacing-lg);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .legal-updated::before {
    content: "üìÖ";
    font-size: 1em;
  }

  .legal-intro {
    margin-top: var(--spacing-md);
    padding: var(--spacing-md) var(--spacing-lg);
    background: rgba(139, 92, 246, 0.08);
    border-left: 3px solid var(--color-primary);
    border-radius: var(--radius-md);
  }

  .legal-intro p {
    max-width: 100%;
    font-size: 1.0625rem;
    line-height: 1.7;
    color: var(--color-text-primary);
    margin: 0;
  }

  .legal-content {
    padding-top: var(--spacing-xl);
  }

  .legal-content h2 {
    margin-top: var(--spacing-xl);
    font-size: clamp(1.35rem, 2vw, 1.75rem);
  }

  .legal-content h2:first-of-type {
    margin-top: 0;
  }

  .legal-content h3 {
    font-size: 1.25rem;
    color: var(--color-text-primary);
    margin: var(--spacing-md) 0 var(--spacing-sm);
  }

  .legal-content p,
  .legal-content li {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }

  .legal-content p {
    margin-bottom: var(--spacing-md);
    max-width: 75ch;
  }

  .legal-content ul {
    margin: var(--spacing-sm) 0 var(--spacing-md) 0;
    padding-left: var(--spacing-lg);
    color: var(--color-text-secondary);
  }

  .legal-content li {
    margin-bottom: var(--spacing-sm);
    padding-left: var(--spacing-xs);
  }

  .legal-content a {
    color: var(--color-primary-light);
    text-decoration: underline;
    text-decoration-color: rgba(139, 92, 246, 0.4);
    text-underline-offset: 3px;
    transition: all var(--transition-base);
  }

  .legal-content a:hover {
    color: var(--color-primary);
    text-decoration-color: rgba(139, 92, 246, 0.8);
  }

  .legal-stack {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    counter-reset: section;
  }

  .legal-card {
    background: linear-gradient(
      135deg,
      rgba(30, 41, 59, 0.8) 0%,
      rgba(30, 41, 59, 0.6) 100%
    );
    border: 1px solid rgba(139, 92, 246, 0.2);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.2),
      0 2px 4px -1px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    position: relative;
    overflow: hidden;
    transition: all var(--transition-slow);
  }

  .legal-card:hover {
    border-color: rgba(139, 92, 246, 0.35);
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.2),
      0 4px 6px -2px rgba(0, 0, 0, 0.1),
      0 0 0 1px rgba(139, 92, 246, 0.1);
    transform: translateY(-2px);
  }

  .legal-card h2 {
    margin: 0 0 var(--spacing-md) 0;
    padding-bottom: var(--spacing-sm);
    font-weight: 700;
    font-size: 1.375rem;
    color: var(--color-text-primary);
    border-bottom: 2px solid rgba(139, 92, 246, 0.2);
    position: relative;
    padding-left: 2.5rem;
  }

  .legal-card h2::before {
    counter-increment: section;
    content: counter(section);
    position: absolute;
    left: 0;
    top: 0;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-primary);
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 700;
    color: white;
    box-shadow: 0 2px 8px rgba(139, 92, 246, 0.3);
  }

  .legal-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
      circle at top right,
      rgba(139, 92, 246, 0.05),
      transparent 70%
    );
    pointer-events: none;
  }

  .legal-card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--gradient-primary);
    opacity: 0.6;
  }

  .legal-card p:last-child,
  .legal-card ul:last-child {
    margin-bottom: 0;
  }

  .legal-content p + ul {
    margin-top: calc(-1 * var(--spacing-xs));
  }

  .legal-content li::marker {
    color: var(--color-primary-light);
    font-weight: 600;
  }

  /* Enhanced strong/bold text */
  .legal-card strong,
  .legal-card b {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  /* Code or technical terms */
  .legal-card code {
    background: rgba(139, 92, 246, 0.15);
    padding: 0.125rem 0.375rem;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
    color: var(--color-primary-light);
    border: 1px solid rgba(139, 92, 246, 0.25);
  }

  @media (max-width: 768px) {
    .legal-hero {
      padding-top: var(--spacing-2xl);
      padding-bottom: var(--spacing-xl);
    }

    .legal-card {
      padding: var(--spacing-lg);
    }

    .legal-card h2 {
      font-size: 1.25rem;
      padding-left: 2.25rem;
    }

    .legal-card h2::before {
      width: 1.75rem;
      height: 1.75rem;
      font-size: 0.8125rem;
    }

    .legal-intro {
      padding: var(--spacing-sm) var(--spacing-md);
    }
  }

  @media (min-width: 1024px) {
    .container {
      padding-left: var(--spacing-xl);
      padding-right: var(--spacing-xl);
    }
  }
</style>
