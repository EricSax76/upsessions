rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function userId() {
      return isSignedIn() ? request.auth.uid : null;
    }

    function userEmail() {
      return isSignedIn() ? request.auth.token.email : null;
    }

    function isStringList(field) {
      return field is list;
    }

    function isThreadParticipant(data) {
      return isSignedIn()
        && data != null
        && data.participants is list
        && request.auth.uid in data.participants;
    }

    function threadForId(threadId) {
      return get(/databases/$(database)/documents/chat_threads/$(threadId));
    }

    function isValidAnnouncement() {
      return request.resource.data.keys().hasOnly([
        'title',
        'body',
        'city',
        'province',
        'instrument',
        'styles',
        'author',
        'authorId',
        'publishedAt',
      ])
      && request.resource.data.title is string
      && request.resource.data.body is string
      && request.resource.data.city is string
      && request.resource.data.province is string
      && request.resource.data.instrument is string
      && isStringList(request.resource.data.styles)
      && request.resource.data.author is string
      && request.resource.data.authorId is string
      && request.resource.data.publishedAt is timestamp;
    }
    
    function isValidThread() {
      let data = request.resource.data;
      return data.keys().hasAll(['participants', 'createdAt'])
        && data.participants is list
        && data.participants.size() >= 2
        && data.createdAt is timestamp;
    }

    function isValidEvent() {
      return request.resource.data.keys().hasOnly([
        'title',
        'city',
        'venue',
        'start',
        'end',
        'description',
        'organizer',
        'contactEmail',
        'contactPhone',
        'lineup',
        'tags',
        'ticketInfo',
        'capacity',
        'resources',
        'notes',
        'createdAt',
        'updatedAt',
        'ownerId',
      ])
      && request.resource.data.title is string
      && request.resource.data.city is string
      && request.resource.data.venue is string
      && request.resource.data.description is string
      && request.resource.data.organizer is string
      && request.resource.data.contactEmail is string
      && request.resource.data.contactPhone is string
      && request.resource.data.ticketInfo is string
      && request.resource.data.capacity is number
      && request.resource.data.start is timestamp
      && request.resource.data.end is timestamp
      && request.resource.data.ownerId is string
      && request.resource.data.ownerId == request.auth.uid
      && isStringList(request.resource.data.lineup)
      && isStringList(request.resource.data.tags)
      && isStringList(request.resource.data.resources)
      && (!('notes' in request.resource.data) || request.resource.data.notes is string)
      && (!('createdAt' in request.resource.data) || request.resource.data.createdAt is timestamp)
      && (!('updatedAt' in request.resource.data) || request.resource.data.updatedAt is timestamp);
    }

    function isValidContact(contactId) {
      return request.resource.data.keys().hasOnly([
        'id',
        'ownerId',
        'name',
        'instrument',
        'city',
        'styles',
        'highlightStyle',
        'photoUrl',
        'experienceYears',
        'rating',
        'updatedAt',
      ])
      && request.resource.data.id is string
      && request.resource.data.id == contactId
      && request.resource.data.ownerId is string
      && request.resource.data.name is string
      && request.resource.data.instrument is string
      && request.resource.data.city is string
      && isStringList(request.resource.data.styles)
      && request.resource.data.experienceYears is number
      && (!('highlightStyle' in request.resource.data)
        || request.resource.data.highlightStyle is string
        || request.resource.data.highlightStyle == null)
      && (!('photoUrl' in request.resource.data)
        || request.resource.data.photoUrl is string
        || request.resource.data.photoUrl == null)
      && (!('rating' in request.resource.data)
        || request.resource.data.rating is number
        || request.resource.data.rating == null)
      && (!('updatedAt' in request.resource.data)
        || request.resource.data.updatedAt is timestamp
        || request.resource.data.updatedAt == null);
    }

    match /musicians/{musicianId} {
      allow read: if true;
      allow create: if isSignedIn()
        && (
          request.resource.data.ownerId == request.auth.uid
          || musicianId == request.auth.uid
        );
      allow update, delete: if isSignedIn()
        && (
          resource.data.ownerId == request.auth.uid
          || musicianId == request.auth.uid
        );

      match /contacts/{contactId} {
        allow read: if isOwner(musicianId);
        allow create: if isOwner(musicianId) && isValidContact(contactId);
        allow update: if isOwner(musicianId) && isValidContact(contactId);
        allow delete: if isOwner(musicianId);
      }
    }

    match /announcements/{announcementId} {
      allow read: if true;
      allow create: if isSignedIn() && isValidAnnouncement();
      allow update: if isOwner(resource.data.authorId) && isValidAnnouncement();
      allow delete: if isOwner(resource.data.authorId);
    }

    match /events/{eventId} {
      allow read: if true;
      allow create: if isSignedIn() && isValidEvent();
      allow update: if isSignedIn()
        && isValidEvent()
        && resource.data.ownerId == request.auth.uid;
      allow delete: if false;
    }

    match /instrument_categories/{document} {
      allow read: if true;
    }

    match /metadata/{document} {
      allow read: if true;
    }

    match /chat_threads/{threadId} {
      // Allow fetching non-existent threads so clients can determine whether they need to
      // create a new one. Existing threads are still restricted to participants.
      allow get: if (resource != null && isThreadParticipant(resource.data))
        || (resource == null && isSignedIn());
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isThreadParticipant(resource.data)
        // Only allow updating last message info and participantIds
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['lastMessage', 'lastMessageAt', 'participants', 'unreadCounts'])
        // Ensure participants cannot be removed
        && resource.data.participants.diff(request.resource.data.participants).removed.size() == 0;
      // Allow deletion only by a participant and if the messages subcollection is empty.
      allow delete: if isThreadParticipant(resource.data) && !exists(/databases/$(database)/documents/chat_threads/$(threadId)/messages);

      match /messages/{messageId} {
        function parentThreadPath() {
          return /databases/$(database)/documents/chat_threads/$(threadId);
        }

        function parentThreadData() {
          return get(parentThreadPath()).data;
        }

        function parentThreadExists() {
          return exists(parentThreadPath());
        }

        function isValidMessage() {
          let data = request.resource.data;
          return data.keys().hasOnly(['sender', 'senderId', 'body', 'sentAt'])
            && data.body is string
            && data.sentAt is timestamp
            && data.sender is string
            && data.senderId is string;
        }

        function senderMatchesCurrentUser() {
          return request.resource.data.senderId == request.auth.uid;
        }

        allow read: if parentThreadExists() && isThreadParticipant(parentThreadData());
        allow create: if parentThreadExists() && isThreadParticipant(parentThreadData())
          && senderMatchesCurrentUser()
          && isValidMessage();
        allow update, delete: if false;
      }
    }

    // `users` is deprecated: the app uses `musicians` for profiles/lookup.
    // Keep the path blocked to avoid accidental user-doc creation from clients.
    match /users/{uid} {
      allow read, write: if false;
    }

    function groupDocPath(groupId) {
      return /databases/$(database)/documents/groups/$(groupId);
    }

    function memberDocPath(groupId, uid) {
      return /databases/$(database)/documents/groups/$(groupId)/members/$(uid);
    }

    function inviteDocPath(groupId, inviteId) {
      return /databases/$(database)/documents/groups/$(groupId)/invites/$(inviteId);
    }

    // Groups are managed by authenticated musicians (profile stored at /musicians/{uid}).
    function isMusician() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/musicians/$(request.auth.uid));
    }

    function isActiveMember(groupId) {
      return isMusician()
        && exists(memberDocPath(groupId, request.auth.uid))
        && get(memberDocPath(groupId, request.auth.uid)).data.status == 'active';
    }

    function isAdminOrOwner(groupId) {
      return isActiveMember(groupId)
        && get(memberDocPath(groupId, request.auth.uid)).data.role in ['owner', 'admin'];
    }

    function canAcceptInvite(groupId, inviteId) {
      return isSignedIn() && canAcceptInviteData(get(inviteDocPath(groupId, inviteId)).data);
    }

    function canAcceptInviteData(invite) {
      return invite != null
        && invite.targetUid == request.auth.uid
        && invite.status == 'active'
        && invite.expiresAt is timestamp
        && invite.expiresAt > request.time;
    }

    function isOwnerMembershipCreate(groupId, uid) {
      return isMusician()
        && uid == request.auth.uid
        && request.resource.data.userId == uid
        && existsAfter(groupDocPath(groupId))
        && getAfter(groupDocPath(groupId)).data.ownerId == request.auth.uid
        && request.resource.data.role == 'owner'
        && request.resource.data.status == 'active';
    }

    function isInviteMembershipCreate(groupId, uid) {
      return isMusician()
        && uid == request.auth.uid
        && request.resource.data.userId == uid
        && request.resource.data.role == 'member'
        && request.resource.data.status == 'active'
        && request.resource.data.inviteId is string
        && canAcceptInvite(groupId, request.resource.data.inviteId);
    }

    function isInviteMarkUsed(groupId, inviteId) {
      return isSignedIn()
        && canAcceptInviteData(resource.data)
        && request.resource.data.status == 'used'
        && request.resource.data.usedBy == request.auth.uid
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'usedBy', 'usedAt']);
    }

    match /groups/{groupId} {
      allow read: if isActiveMember(groupId);
      allow create: if isMusician()
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.name is string;
      allow update: if isAdminOrOwner(groupId);
      allow delete: if false;

      match /members/{uid} {
        allow read: if isSignedIn()
          && (
            uid == request.auth.uid
            || (resource != null && resource.data.userId == request.auth.uid)
            || isActiveMember(groupId)
          );
        allow create: if isOwnerMembershipCreate(groupId, uid)
          || isInviteMembershipCreate(groupId, uid)
          || (isAdminOrOwner(groupId)
            && request.resource.data.userId == uid
            && request.resource.data.role in ['owner', 'admin', 'member']
            && request.resource.data.status == 'active');
        allow update: if isAdminOrOwner(groupId) && request.resource.data.userId == uid;
        allow delete: if isAdminOrOwner(groupId);
      }

      match /rehearsals/{rehearsalId} {
        allow read: if isActiveMember(groupId);
        allow create, update: if isActiveMember(groupId);
        allow delete: if isAdminOrOwner(groupId);

        match /setlist/{itemId} {
          allow read, write: if isActiveMember(groupId);
        }
      }

      match /invites/{inviteId} {
        allow get: if isAdminOrOwner(groupId)
          || (isSignedIn() && canAcceptInviteData(resource.data));
        allow list: if isAdminOrOwner(groupId);
        allow create: if isAdminOrOwner(groupId)
          && request.resource.data.targetUid is string
          && request.resource.data.status == 'active'
          && request.resource.data.expiresAt is timestamp;
        allow update: if isAdminOrOwner(groupId) || isInviteMarkUsed(groupId, inviteId);
        allow delete: if false;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
